/* pages/draw/draw.wxss */

@import "/pages/template/recommend-template.wxss";

.root {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.recommend-session {
  width: 100%;
  white-space: nowrap;
  box-shadow:.1rem .1rem 0 rgba(0,0,0,0.25);
  background: rgba(242,242,242,0.98);
}

.recommend-session-spacing {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
}

.recommend-session-spacing:last-child {
  margin-bottom: 0rpx;
  padding-bottom: 30rpx;
}

.recommend-session-content {
  padding: 0rpx 30rpx 0rpx 30rpx;
}

.recommend-scroll {
  width: 100%;
  height: 256rpx;
  white-space: nowrap;
}

.delete-session {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  white-space: nowrap;
  box-shadow:.1rem .1rem 0 rgba(0,0,0,0.25);
  background: rgba(242,242,242,0.98);
  display: block;
  position: fixed;
  bottom: 32rpx;
  right: 32rpx;
}

.delete-session .delete {
  width: 88rpx;
  height: 88rpx;
  margin-left: 4rpx;
  margin-top: 4rpx;
}

.canvas {
  background-color: #ffffff;
}